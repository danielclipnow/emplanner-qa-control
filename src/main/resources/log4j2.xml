<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="logPath">/target/log4j2</Property>
        <Property name="rollingFileName">app</Property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{HH:mm:ss.SSS}] %F %L - %msg%n"/>
        </Console>
        <RollingFile
                name="rollingFile" fileName="logs/app.log"
                filePattern="logs/%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout>
                <Pattern>[%d{HH:mm:ss.SSS}] %F %L %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true" />
            </Policies>
        </RollingFile>
        <NoSql name="MongoDbAppender">
            <MongoDb databaseName="logsSelenium" collectionName="logs" server="localhost" port="27017"
            username="" password=""/>
        </NoSql>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="Console" />
            <AppenderRef ref="rollingFile" />
            <AppenderRef ref="MongoDbAppender" />
        </Root>
    </Loggers>
</Configuration>
